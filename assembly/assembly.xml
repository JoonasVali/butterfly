<assembly>
  <id>bin</id>
  <!-- Specifies that our binary distribution is a dir -->
  <formats>
    <format>dir</format>
  </formats>

  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <unpack>false</unpack>
    </dependencySet>
  </dependencySets>
  <fileSets>

    <fileSet>
      <directory>${binfolder}/unix</directory>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered> <!-- Causes maven placeholders to be replaced in the files -->
      <includes>
        <include>**/*</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0755</fileMode>
    </fileSet>

    <fileSet>
      <directory>${binfolder}/win</directory>
      <outputDirectory>bin</outputDirectory>
      <filtered>true</filtered> <!-- Causes maven placeholders to be replaced in the files -->
      <includes>
        <include>**/*</include>
      </includes>
      <lineEnding>windows</lineEnding>
    </fileSet>

    <fileSet>
      <directory>${basedir}/doc</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
      <lineEnding>unix</lineEnding>
      <fileMode>0444</fileMode>
    </fileSet>


    <fileSet>
      <directory>${program.target}</directory>
      <outputDirectory>lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>

    <fileSet>
      <directory>${slick.native.lib}</directory>
      <outputDirectory>sl-libs</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>

  </fileSets>
</assembly>